{
  "name": "authcore",
  "version": "1.0.0",
  "description": "Authentication core service",
  "main": "dist/server.js",
  "scripts": {
    "dev": "NODE_PATH=./src ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/infrastructure/webserver/index.ts",
    "build": "tsc",
    "start": "node -r dist/infrastructure/webserver/index.js",
    "docker:build": "docker-compose -f src/infrastructure/docker/docker-compose.yml --env-file .env up --build",
    "docker:down": "docker-compose -f src/infrastructure/docker/docker-compose.yml --env-file .env down",
    "docker:logs": "docker-compose -f src/infrastructure/docker/docker-compose.yml --env-file .env logs -f",
    "docker:dev": "docker-compose -f src/infrastructure/docker/docker-compose.yml --env-file .env up",
    "prisma:generate": "prisma generate --schema=src/infrastructure/orm/schema.prisma",
    "prisma:migrate:dev": "prisma migrate dev --schema=src/infrastructure/orm/schema.prisma",
    "prisma:migrate:reset": "prisma migrate reset --schema=src/infrastructure/orm/schema.prisma",
    "prisma:migrate:rollback": "prisma migrate rollback --schema=src/infrastructure/orm/schema.prisma",
    "prisma:seed": "ts-node -r tsconfig-paths/register src/infrastructure/orm/seeders/index.ts",
    "prepare": "husky",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/mjml": "^4.7.4",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/winston": "^2.4.4",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "google-auth-library": "^9.6.3",
    "jsonwebtoken": "^9.0.2",
    "mjml": "^4.14.0",
    "nodemailer": "^6.9.9",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.19",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "prisma": "^6.9.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
